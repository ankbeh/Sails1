extends ../../layouts/layout.pug

block content
  .coloumns
    .coloumn
      h1.title.is-pulled-left #{title}
    .coloumn
      a.button.is-primary.is-pulled-right(href="/blog/new") New Blog
  each blog in blogs
    section.section
      .container
        .card
          header.card-header
            p.card-header-title #{blog.title}
          .card-content
            .content #{blog.content}
          footer.card-footer
            a.card-footer-item(href="/blog/show/"+ blog.id) Show
            a.card-footer-item(href="/blog/edit/"+ blog.id) Edit
            a.card-footer-item.delete-blog(data-id= blog.id,href="#") Delete
